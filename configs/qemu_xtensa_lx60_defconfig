# Architecture
LINGMO_xtensa=y
LINGMO_XTENSA_CUSTOM=y
LINGMO_XTENSA_OVERLAY_FILE="https://github.com/jcmvbkbc/xtensa-toolchain-build/raw/95291b7c39e6f790d0b2f062c945a630290f2c81/overlays/xtensa_dc233c.tar.gz"

# System
LINGMO_SYSTEM_DHCP="eth0"
LINGMO_TARGET_GENERIC_GETTY_PORT="ttyS0"

# Filesystem
# LINGMO_TARGET_ROOTFS_TAR is not set
LINGMO_TARGET_ROOTFS_INITRAMFS=y

# Image
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/qemu/post-image.sh"
LINGMO_ROOTFS_POST_SCRIPT_ARGS="$(LINGMO_DEFCONFIG)"

# Linux headers same as kernel
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.1.44"
LINGMO_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
LINGMO_LINUX_KERNEL_CUSTOM_CONFIG_FILE="board/qemu/xtensa-lx60/linux.config"
LINGMO_LINUX_KERNEL_IMAGE_TARGET_CUSTOM=y
LINGMO_LINUX_KERNEL_IMAGE_NAME="Image.elf"
LINGMO_LINUX_KERNEL_IMAGE_TARGET_NAME="Image"

# Kernel needs mkimage
LINGMO_PACKAGE_HOST_UBOOT_TOOLS=y

# host-qemu for gitlab testing
LINGMO_PACKAGE_HOST_QEMU=y
LINGMO_PACKAGE_HOST_QEMU_SYSTEM_MODE=y
