# architecture
LINGMO_arm=y
LINGMO_cortex_a7=y

# global patch directory
LINGMO_GLOBAL_PATCH_DIR="board/octavo/osd32mp1-red/patches"

# Linux headers same as kernel, a 5.10 series
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_10=y

# rootfs overlay
LINGMO_ROOTFS_OVERLAY="board/octavo/osd32mp1-red/overlay/"

# image generation
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="support/scripts/genimage.sh"
LINGMO_ROOTFS_POST_SCRIPT_ARGS="-c board/octavo/osd32mp1-red/genimage.cfg"

# Kernel, use CUSTOM_DTS_PATH associated with INTREE_DTS_NAME to build the right
# device-tree
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_GIT=y
LINGMO_LINUX_KERNEL_CUSTOM_REPO_URL="https://github.com/STMicroelectronics/linux.git"
LINGMO_LINUX_KERNEL_CUSTOM_REPO_VERSION="v5.10-stm32mp-r2.1"
LINGMO_LINUX_KERNEL_DEFCONFIG="multi_v7"
LINGMO_LINUX_KERNEL_CONFIG_FRAGMENT_FILES="$(LINUX_DIR)/arch/arm/configs/fragment-01-multiv7_cleanup.config $(LINUX_DIR)/arch/arm/configs/fragment-02-multiv7_addons.config"
LINGMO_LINUX_KERNEL_DTS_SUPPORT=y
LINGMO_LINUX_KERNEL_INTREE_DTS_NAME="stm32mp157c-osd32mp1-red"
LINGMO_LINUX_KERNEL_CUSTOM_DTS_PATH="board/octavo/osd32mp1-red/linux-dts/*"
LINGMO_LINUX_KERNEL_INSTALL_TARGET=y
LINGMO_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
LINGMO_TARGET_ROOTFS_EXT2_4=y
# LINGMO_TARGET_ROOTFS_TAR is not set

# TF-A
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE=y
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_GIT=y
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_REPO_URL="https://github.com/STMicroelectronics/arm-trusted-firmware.git"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_REPO_VERSION="v2.4-stm32mp-r1"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_PLATFORM="stm32mp1"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_DTS_PATH="board/octavo/osd32mp1-red/tfa-dts/*"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_FIP=y
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_UBOOT_AS_BL33=y
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_UBOOT_BL33_IMAGE="u-boot-nodtb.bin"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_ADDITIONAL_VARIABLES="STM32MP_SDMMC=1 AARCH32_SP=sp_min DTB_FILE_NAME=stm32mp157c-osd32mp1-red.dtb STM32MP_USB_PROGRAMMER=1 BL33_CFG=$(BINARIES_DIR)/u-boot.dtb"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_IMAGES="*.stm32 fip.bin"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_NEEDS_DTC=y

# U-Boot
LINGMO_TARGET_UBOOT=y
LINGMO_TARGET_UBOOT_BUILD_SYSTEM_KCONFIG=y
LINGMO_TARGET_UBOOT_CUSTOM_GIT=y
LINGMO_TARGET_UBOOT_CUSTOM_REPO_URL="https://github.com/STMicroelectronics/u-boot.git"
LINGMO_TARGET_UBOOT_CUSTOM_REPO_VERSION="v2020.10-stm32mp-r2.1"
LINGMO_TARGET_UBOOT_BOARD_DEFCONFIG="stm32mp15_trusted"
# LINGMO_TARGET_UBOOT_FORMAT_BIN is not set
LINGMO_TARGET_UBOOT_FORMAT_CUSTOM=y
LINGMO_TARGET_UBOOT_FORMAT_CUSTOM_NAME="u-boot-nodtb.bin u-boot.dtb"
LINGMO_TARGET_UBOOT_CUSTOM_MAKEOPTS="DEVICE_TREE=stm32mp157c-osd32mp1-red"

# Package needed to generate the image
LINGMO_PACKAGE_HOST_GENIMAGE=y
