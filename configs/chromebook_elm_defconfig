# Architecture
LINGMO_aarch64=y
LINGMO_cortex_a72_a53=y

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
LINGMO_TARGET_ROOTFS_EXT2_4=y

# Linux headers same as kernel (5.10 series)
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_10=y

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION_VALUE="5.10"

# Build Kernel with a Custom config.
LINGMO_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
LINGMO_LINUX_KERNEL_CUSTOM_CONFIG_FILE="board/chromebook/elm/linux.config"

# DTS support
LINGMO_LINUX_KERNEL_DTS_SUPPORT=y
LINGMO_LINUX_KERNEL_INTREE_DTS_NAME="mediatek/mt8173-elm"

# Package Firmware for WiFi chip.
LINGMO_PACKAGE_LINUX_FIRMWARE=y
LINGMO_PACKAGE_LINUX_FIRMWARE_MWIFIEX_SD8797=y

# Scripts to generate final images.
LINGMO_ROOTFS_POST_BUILD_SCRIPT="board/chromebook/elm/sign.sh"
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/chromebook/mksd.sh"

# Supporting host tools to build / sign FIT Image.
LINGMO_PACKAGE_HOST_PARTED=y
LINGMO_PACKAGE_HOST_UBOOT_TOOLS=y
LINGMO_PACKAGE_HOST_UBOOT_TOOLS_FIT_SUPPORT=y
LINGMO_PACKAGE_HOST_VBOOT_UTILS=y
