# architecture
LINGMO_arm=y
LINGMO_arm926t=y

# Linux headers same as kernel, a 4.8 series
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_4_8=y

# system
LINGMO_TARGET_GENERIC_GETTY_PORT="ttyAMA0"

# kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION_VALUE="4.8.6"
LINGMO_LINUX_KERNEL_DEFCONFIG="mxs"
LINGMO_LINUX_KERNEL_DTS_SUPPORT=y
LINGMO_LINUX_KERNEL_INTREE_DTS_NAME="imx23-evk"

# bootloader
LINGMO_TARGET_UBOOT=y
LINGMO_TARGET_UBOOT_BOARDNAME="mx23evk"
LINGMO_TARGET_UBOOT_CUSTOM_VERSION=y
LINGMO_TARGET_UBOOT_CUSTOM_VERSION_VALUE="2021.10"
LINGMO_TARGET_UBOOT_FORMAT_SD=y

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
LINGMO_TARGET_ROOTFS_EXT2_4=y

# To generate SD card image
LINGMO_PACKAGE_HOST_DOSFSTOOLS=y
LINGMO_PACKAGE_HOST_GENIMAGE=y
LINGMO_PACKAGE_HOST_MTOOLS=y
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/freescale/common/mxs/post-image.sh"
