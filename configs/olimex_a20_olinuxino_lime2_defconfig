# sunxi packages
LINGMO_PACKAGE_SUNXI_TOOLS=y
LINGMO_PACKAGE_SUNXI_MALI_UTGARD=y
LINGMO_PACKAGE_SUNXI_MALI_UTGARD_DRIVER=y

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
