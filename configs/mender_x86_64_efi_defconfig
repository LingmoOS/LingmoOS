# Architecture
LINGMO_x86_64=y

# Toolchain
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_18=y

# System
LINGMO_TARGET_GENERIC_GETTY_PORT="ttyS0"
LINGMO_ROOTFS_DEVICE_CREATION_DYNAMIC_EUDEV=y

# Required as vda4 doesn't mount on first boot with busybox
LINGMO_INIT_SYSV=y

# Required tools to create bootable media
LINGMO_PACKAGE_HOST_DOSFSTOOLS=y
LINGMO_PACKAGE_HOST_MTOOLS=y

# Bootloader
LINGMO_TARGET_GRUB2=y
LINGMO_TARGET_GRUB2_X86_64_EFI=y
# Add mandatory modules from MENDER_GRUBENV_MANDATORY_MODULES
LINGMO_TARGET_GRUB2_BUILTIN_MODULES_EFI="boot linux ext2 fat squash4 part_msdos part_gpt normal efi_gop loadenv hashsum echo halt gcry_sha256 test regexp sleep"
LINGMO_TARGET_GRUB2_INSTALL_TOOLS=y

# Required tools to create a mender image
LINGMO_PACKAGE_HOST_GENIMAGE=y
LINGMO_PACKAGE_HOST_MENDER_ARTIFACT=y

# Filesystem / image
LINGMO_TARGET_ROOTFS_EXT2=y
LINGMO_TARGET_ROOTFS_EXT2_4=y
LINGMO_TARGET_ROOTFS_EXT2_SIZE="128M"
# LINGMO_TARGET_ROOTFS_TAR is not set
LINGMO_ROOTFS_OVERLAY="board/mender/x86_64/overlay"
LINGMO_ROOTFS_POST_BUILD_SCRIPT="board/mender/x86_64/post-build.sh"
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/mender/x86_64/post-image-efi.sh"
LINGMO_ROOTFS_POST_SCRIPT_ARGS="--data-part-size=32M --device-type=buildroot-x86_64 --artifact-name=1.0"

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION_VALUE="5.18.14"
LINGMO_LINUX_KERNEL_USE_CUSTOM_CONFIG=y
LINGMO_LINUX_KERNEL_CUSTOM_CONFIG_FILE="board/mender/x86_64/linux.config"
LINGMO_LINUX_KERNEL_INSTALL_TARGET=y
LINGMO_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y
LINGMO_LINUX_KERNEL_NEEDS_HOST_LIBELF=y

