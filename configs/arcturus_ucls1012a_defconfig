# Architecture
LINGMO_aarch64=y

# Linux headers same as kernel, a 5.4 series
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_5_4=y

# System settings
LINGMO_TARGET_GENERIC_HOSTNAME="ucls1012a"
LINGMO_TARGET_GENERIC_ISSUE="Welcome to uCLS1012A-SOM"
LINGMO_SYSTEM_DHCP="eth0"
LINGMO_ROOTFS_POST_BUILD_SCRIPT="board/arcturus/aarch64-ucls1012a/post-build.sh"
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/arcturus/aarch64-ucls1012a/post-image.sh"

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_TARBALL=y
LINGMO_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="$(call github,ArcturusNetworks,uCLS1012A-kernel,v.22.06)/linux-v.22.06.tar.gz"
LINGMO_LINUX_KERNEL_DEFCONFIG="ucls1012a"
LINGMO_LINUX_KERNEL_IMAGEGZ=y
LINGMO_LINUX_KERNEL_DTS_SUPPORT=y
LINGMO_LINUX_KERNEL_INTREE_DTS_NAME="arcturus/arc-ucls1012a"

# Filesystem
LINGMO_TARGET_ROOTFS_CPIO=y
LINGMO_TARGET_ROOTFS_CPIO_GZIP=y

# U-boot
LINGMO_TARGET_UBOOT=y
LINGMO_TARGET_UBOOT_BUILD_SYSTEM_KCONFIG=y
LINGMO_TARGET_UBOOT_CUSTOM_TARBALL=y
LINGMO_TARGET_UBOOT_CUSTOM_TARBALL_LOCATION="$(call github,ArcturusNetworks,uCLS1012A-uboot,v.22.06)/uboot-v.22.06.tar.gz"
LINGMO_TARGET_UBOOT_BOARD_DEFCONFIG="UCLS1012A_QSPI128"

# Tools
LINGMO_PACKAGE_HOST_UBOOT_TOOLS=y
LINGMO_PACKAGE_HOST_UBOOT_TOOLS_FIT_SUPPORT=y
