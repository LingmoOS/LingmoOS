# Architecture
LINGMO_arm=y
LINGMO_cortex_a9=y
LINGMO_ARM_ENABLE_NEON=y
LINGMO_ARM_ENABLE_VFP=y
LINGMO_ARM_FPU_VFPV3D16=y

# System
LINGMO_SYSTEM_DHCP="eth0"
LINGMO_TARGET_GENERIC_GETTY_PORT="ttyAMA0"

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
# LINGMO_TARGET_ROOTFS_TAR is not set

# Image
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/qemu/post-image.sh"
LINGMO_ROOTFS_POST_SCRIPT_ARGS="$(LINGMO_DEFCONFIG)"
# Qemu >= 5.1 requires an SD card size to be a power of 2, e.g. 64 MiB.
LINGMO_TARGET_ROOTFS_EXT2_SIZE="64M"

# Linux headers same as kernel
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.1.44"
LINGMO_LINUX_KERNEL_DEFCONFIG="vexpress"
LINGMO_LINUX_KERNEL_DTS_SUPPORT=y
LINGMO_LINUX_KERNEL_INTREE_DTS_NAME="vexpress-v2p-ca9"

# host-qemu for gitlab testing
LINGMO_PACKAGE_HOST_QEMU=y
LINGMO_PACKAGE_HOST_QEMU_SYSTEM_MODE=y
