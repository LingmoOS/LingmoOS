# Architecture
LINGMO_arm=y
LINGMO_arm926t=y

# Toolchain
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_4_19=y

# Creation of the SD card image
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="support/scripts/genimage.sh"
LINGMO_ROOTFS_POST_SCRIPT_ARGS="-c board/atmel/at91sam9x5ek_mmc/genimage.cfg"

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_TARBALL=y
LINGMO_LINUX_KERNEL_CUSTOM_TARBALL_LOCATION="$(call github,linux4sam,linux-at91,linux4sam_6.1)/linux-linux4sam_6.1.tar.gz"
LINGMO_LINUX_KERNEL_DEFCONFIG="at91_dt"
LINGMO_LINUX_KERNEL_DTS_SUPPORT=y
LINGMO_LINUX_KERNEL_INTREE_DTS_NAME="at91sam9g15ek at91sam9g25ek at91sam9g35ek at91sam9x25ek at91sam9x35ek"
LINGMO_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
LINGMO_TARGET_ROOTFS_EXT2_4=y

# Bootloaders
LINGMO_TARGET_AT91BOOTSTRAP3=y
LINGMO_TARGET_AT91BOOTSTRAP3_CUSTOM_GIT=y
LINGMO_TARGET_AT91BOOTSTRAP3_CUSTOM_REPO_URL="https://github.com/linux4sam/at91bootstrap.git"
LINGMO_TARGET_AT91BOOTSTRAP3_CUSTOM_REPO_VERSION="v3.10.3"
LINGMO_TARGET_AT91BOOTSTRAP3_DEFCONFIG="at91sam9x5eksd_uboot"
LINGMO_TARGET_UBOOT=y
LINGMO_TARGET_UBOOT_BUILD_SYSTEM_KCONFIG=y
LINGMO_TARGET_UBOOT_CUSTOM_GIT=y
LINGMO_TARGET_UBOOT_CUSTOM_REPO_URL="https://github.com/linux4sam/u-boot-at91.git"
LINGMO_TARGET_UBOOT_CUSTOM_REPO_VERSION="linux4sam_6.1"
LINGMO_TARGET_UBOOT_BOARD_DEFCONFIG="at91sam9x5ek_mmc"
LINGMO_TARGET_UBOOT_NEEDS_DTC=y
LINGMO_PACKAGE_HOST_UBOOT_TOOLS=y
LINGMO_PACKAGE_HOST_UBOOT_TOOLS_ENVIMAGE=y
LINGMO_PACKAGE_HOST_UBOOT_TOOLS_ENVIMAGE_SOURCE="board/atmel/at91sam9x5ek_mmc/uboot-env.txt"
LINGMO_PACKAGE_HOST_UBOOT_TOOLS_ENVIMAGE_SIZE="0x4000"

# Host packages
# Needed to generate the SD card image
LINGMO_PACKAGE_HOST_DOSFSTOOLS=y
LINGMO_PACKAGE_HOST_GENIMAGE=y
LINGMO_PACKAGE_HOST_MTOOLS=y
