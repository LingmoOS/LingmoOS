# Architecture
LINGMO_x86_64=y
LINGMO_x86_silvermont=y

# Misc
LINGMO_SYSTEM_DHCP="eth0"
LINGMO_ROOTFS_POST_BUILD_SCRIPT="board/minnowboard/post-build.sh"
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="support/scripts/genimage.sh"
