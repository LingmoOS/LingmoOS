LINGMO_PACKAGE_HOST_MTOOLS=y

# Needed for ethernet
LINGMO_PACKAGE_LINUX_FIRMWARE=y
LINGMO_PACKAGE_LINUX_FIRMWARE_RTL_8169=y

# Linux kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
