# Architecture
LINGMO_aarch64=y
LINGMO_cortex_a57=y

# System
LINGMO_SYSTEM_DHCP="eth0"
LINGMO_TARGET_GENERIC_GETTY_PORT="ttyAMA0"

# Filesystem
LINGMO_TARGET_ROOTFS_EXT2=y
LINGMO_TARGET_ROOTFS_EXT2_4=y
# LINGMO_TARGET_ROOTFS_TAR is not set
LINGMO_TARGET_ROOTFS_EXT2_SIZE="128M"

# Image
LINGMO_ROOTFS_POST_IMAGE_SCRIPT="board/qemu/post-image.sh board/qemu/aarch64-sbsa/assemble-flash-images support/scripts/genimage.sh"
LINGMO_ROOTFS_POST_SCRIPT_ARGS="$(LINGMO_DEFCONFIG) -c board/qemu/aarch64-sbsa/genimage.cfg"

# Linux headers same as kernel
LINGMO_PACKAGE_HOST_LINUX_HEADERS_CUSTOM_6_1=y

# Kernel
LINGMO_LINUX_KERNEL=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION=y
LINGMO_LINUX_KERNEL_CUSTOM_VERSION_VALUE="6.1.44"
LINGMO_LINUX_KERNEL_USE_ARCH_DEFAULT_CONFIG=y
LINGMO_LINUX_KERNEL_NEEDS_HOST_OPENSSL=y

# UEFI firmware
LINGMO_TARGET_EDK2=y
LINGMO_TARGET_EDK2_PLATFORM_QEMU_SBSA=y
LINGMO_TARGET_GRUB2=y
LINGMO_TARGET_GRUB2_ARM64_EFI=y

# ARM Trusted Firmware
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE=y
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_GIT=y
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_REPO_URL="https://github.com/ARM-software/arm-trusted-firmware.git"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_CUSTOM_REPO_VERSION="v2.7"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_PLATFORM="qemu_sbsa"
LINGMO_TARGET_ARM_TRUSTED_FIRMWARE_FIP=y

# Host tools for genimage
LINGMO_PACKAGE_HOST_GENIMAGE=y
LINGMO_PACKAGE_HOST_DOSFSTOOLS=y
LINGMO_PACKAGE_HOST_MTOOLS=y

# host-qemu for gitlab testing
LINGMO_PACKAGE_HOST_QEMU=y
LINGMO_PACKAGE_HOST_QEMU_SYSTEM_MODE=y
