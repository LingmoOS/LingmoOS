#	{
#		url => 'http://d-i.debian.org/daily-images/hurd-i386/daily/',
#		logurl => 'http://d-i.debian.org/daily-images/hurd-i386/daily/',
#		email => 'hurd-i386@buildd.debian.org',
#		description => 'daily hurd-i386 images build',
