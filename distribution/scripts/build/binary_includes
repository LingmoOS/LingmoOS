set -e

# Including common functions
[ -e "${LIVE_BUILD}/scripts/build.sh" ] && . "${LIVE_BUILD}/scripts/build.sh" || . /usr/lib/live/build.sh

# Setting static variables
DESCRIPTION="Copy files into binary"
USAGE="${PROGRAM} [--force]"

# Processing arguments and configuration files
Init_config_data "${@}"

Echo_message "Begin copying binary includes..."

# Requiring stage file
Require_stagefiles config bootstrap

# Checking stage file
Check_stagefile

# Acquire lock file
Acquire_lockfile

# Copying includes
cd config/includes.binary
find . | cpio -dmpu --no-preserve-owner "${OLDPWD}"/binary
cd "${OLDPWD}"

if Find_files config/includes.binary/
then
	# Removing symlinks
	if [ "${LINGMO_SYS_BUILD_IMAGE_TYPE}" = "hdd" ]; then
		find binary -type l | xargs rm -f
	fi
fi

# Creating stage file
Create_stagefile
