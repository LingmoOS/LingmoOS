set -e

# Including common functions
[ -e "${LIVE_BUILD}/scripts/build.sh" ] && . "${LIVE_BUILD}/scripts/build.sh" || . /usr/lib/live/build.sh

# Setting static variables
DESCRIPTION="Schedule kernel packages for installation"
USAGE="${PROGRAM} [--force]"

# Processing arguments and configuration files
Init_config_data "${@}"

if [ "${LINGMO_SYS_BUILD_LINUX_PACKAGES}" = "none" ]
then
	exit 0
fi

Echo_message "Begin scheduling kernel image installation..."

# Requiring stage file
Require_stagefiles config bootstrap

# Checking stage file
Check_stagefile

# Acquire lock file
Acquire_lockfile

# Diverting update-initramfs
#case "${LINGMO_SYS_BUILD_INITRAMFS}" in
#	live-boot)
#		mv chroot/usr/sbin/update-initramfs chroot/usr/sbin/update-initramfs.lingmo-system-build
#		;;
#esac

for FLAVOUR in ${LINGMO_SYS_BUILD_LINUX_FLAVOURS_WITH_ARCH}
do
	for PACKAGE in ${LINGMO_SYS_BUILD_LINUX_PACKAGES}
	do
		echo ${PACKAGE}-${FLAVOUR} >> chroot/root/packages.chroot
	done
done

# Creating stage file
Create_stagefile
