<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.lingmo.menu.settings" path="/">
    <key type="i" name="animation-duration">
      <default>300</default>
      <summary>animation duration</summary>
      <description>Control the duration of animation</description>
    </key>
    <key type="i" name="width">
      <range min="680" max="900"/>
      <default>842</default>
      <summary>width of lingmo-menu</summary>
      <description>Control the width of the lingmo-menu</description>
    </key>
    <key type="i" name="height">
      <range min="580" max="700"/>
      <default>688</default>
      <summary>height of lingmo-menu</summary>
      <description>Control the height of the lingmo-menu</description>
    </key>
    <key type="i" name="margin">
      <range min="0" max="50"/>
      <default>8</default>
      <summary>margin of lingmo-menu</summary>
      <description>Control the margin of the lingmo-menu</description>
    </key>
    <key type="b" name="follow-lingmo-panel">
      <default>true</default>
      <summary>follow lingmo-panel</summary>
      <description>Control whether to follow the lingmo-panel</description>
    </key>
  </schema>
</schemalist>
