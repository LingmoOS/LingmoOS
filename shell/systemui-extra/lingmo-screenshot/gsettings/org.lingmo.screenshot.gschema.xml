<schemalist>
    <schema id="org.lingmo.screenshot" path="/org/lingmo/screenshot/" gettext-domain="screenshot">
    <key type="s" name="screenshot">
            <default>"true"</default>
            <summary>Enable to use lingmo-screenshot</summary>
            <description>Whether enable to use lingmo-screenshot</description>
    </key>
    <key type="s" name="screenshot-path">
            <default>""</default>
            <summary>lingmo-screenshot save path</summary>
            <description>Record  lingmo-screenshot save path</description>
    </key>
    <key type="s" name="screenshot-name">
            <default>""</default>
            <summary>lingmo-screenshot save name</summary>
            <description>Record  lingmo-screenshot saved name</description>
    </key>
    <key type="s" name="screenshot-type">
            <default>""</default>
            <summary>lingmo-screenshot save type</summary>
            <description>Record  lingmo-screenshot save type</description>
    </key>
    <key type="b" name="isrunning">
            <default>false</default>
            <summary>Whether lingmo-screenshot is running</summary>
            <description>Whether running lingmo-screenshot</description>
    </key>
    <key type="s" name="new-screenshot-name">
            <default>""</default>
            <summary>set lingmo-screenshot save name</summary>
            <description>Record  lingmo-screenshot saved name</description>
     </key>
    </schema>
</schemalist>

