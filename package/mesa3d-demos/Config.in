config LINGMO_PACKAGE_MESA3D_DEMOS
	bool "mesa3d-demos"
	depends on LINGMO_INSTALL_LIBSTDCPP
	depends on LINGMO_PACKAGE_HAS_LIBGL || LINGMO_PACKAGE_HAS_LIBGLES \
		|| LINGMO_PACKAGE_HAS_LIBEGL || LINGMO_PACKAGE_HAS_LIBOPENVG
	select LINGMO_PACKAGE_LIBGLEW if LINGMO_PACKAGE_XORG7 && LINGMO_PACKAGE_HAS_LIBGL
	select LINGMO_PACKAGE_LIBGLU if LINGMO_PACKAGE_XORG7 && LINGMO_PACKAGE_HAS_LIBGL
	select LINGMO_PACKAGE_XLIB_LIBX11 if LINGMO_PACKAGE_XORG7 && LINGMO_PACKAGE_HAS_LIBGL
	select LINGMO_PACKAGE_XLIB_LIBXEXT if LINGMO_PACKAGE_XORG7 && LINGMO_PACKAGE_HAS_LIBGL
	select LINGMO_PACKAGE_LIBXKBCOMMON if LINGMO_PACKAGE_WAYLAND
	help
	  OpenGL demos from the Mesa 3D project.

	  http://mesa3d.org

comment "mesa3d-demos needs a toolchain with C++"
	depends on !LINGMO_INSTALL_LIBSTDCPP
	depends on LINGMO_PACKAGE_HAS_LIBGL || LINGMO_PACKAGE_HAS_LIBGLES \
		|| LINGMO_PACKAGE_HAS_LIBEGL || LINGMO_PACKAGE_HAS_LIBOPENVG
