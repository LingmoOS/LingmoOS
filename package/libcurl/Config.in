config LINGMO_PACKAGE_LIBCURL
	bool "libcurl"
	help
	  cURL is a tool for getting files from FTP, HTTP, Gopher,
	  Telnet, and Dict servers, using any of the supported
	  protocols.

	  https://curl.se/

if LINGMO_PACKAGE_LIBCURL

config LINGMO_PACKAGE_LIBCURL_CURL
	bool "curl binary"
	help
	  Install curl binary as well

config LINGMO_PACKAGE_LIBCURL_VERBOSE
	bool "verbose strings"
	help
	  Enable verbose text strings

config LINGMO_PACKAGE_LIBCURL_PROXY_SUPPORT
	bool "proxy support"
	default y
	help
	  Enable proxy support.

config LINGMO_PACKAGE_LIBCURL_COOKIES_SUPPORT
	bool "cookies support"
	default y
	help
	  Enable support for cookies.

config LINGMO_PACKAGE_LIBCURL_WEBSOCKETS_SUPPORT
	bool "websockets support"
	help
	  Enable support for websockets.

config LINGMO_PACKAGE_LIBCURL_EXTRA_PROTOCOLS_FEATURES
	bool "enable extra protocols and features"
	default y
	help
	  Enable the following extra protocols and features:
	  - LDAP / LDAPS
	  - POP3 / IMAP / SMTP
	  - Telnet
	  - TFTP
	  - RTSP
	  - SMB / CIFS
	  - DICT
	  - Gopher

# Packages must select that if they require a SSL/TLS-enabled libcurl.
# Those packages must also select one crypto package that can be used
# as a backend below.
config LINGMO_PACKAGE_LIBCURL_FORCE_TLS
	bool

choice
	prompt "SSL/TLS library to use"

config LINGMO_PACKAGE_LIBCURL_OPENSSL
	bool "OpenSSL"
	depends on LINGMO_PACKAGE_OPENSSL

config LINGMO_PACKAGE_LIBCURL_BEARSSL
	bool "BearSSL"
	depends on LINGMO_PACKAGE_BEARSSL

config LINGMO_PACKAGE_LIBCURL_GNUTLS
	bool "GnuTLS"
	depends on LINGMO_PACKAGE_GNUTLS

config LINGMO_PACKAGE_LIBCURL_MBEDTLS
	bool "mbed TLS"
	depends on LINGMO_PACKAGE_MBEDTLS

config LINGMO_PACKAGE_LIBCURL_WOLFSSL
	bool "WolfSSL"
	depends on LINGMO_PACKAGE_WOLFSSL
	depends on !LINGMO_STATIC_LIBS # wolfssl-all
	select LINGMO_PACKAGE_WOLFSSL_ALL

comment "WolfSSL needs a toolchain w/ dynamic library"
	depends on LINGMO_PACKAGE_WOLFSSL
	depends on LINGMO_STATIC_LIBS

config LINGMO_PACKAGE_LIBCURL_TLS_NONE
	bool "None"
	depends on !LINGMO_PACKAGE_LIBCURL_FORCE_TLS

endchoice

endif
