config LINGMO_PACKAGE_LIBGLFW
	bool "libglfw"
	depends on LINGMO_PACKAGE_XORG7 || LINGMO_PACKAGE_WAYLAND
	depends on LINGMO_PACKAGE_HAS_LIBGL || LINGMO_PACKAGE_HAS_LIBGLES
	select LINGMO_PACKAGE_LIBXKBCOMMON if LINGMO_PACKAGE_WAYLAND
	select LINGMO_PACKAGE_WAYLAND_PROTOCOLS if LINGMO_PACKAGE_WAYLAND
	select LINGMO_PACKAGE_XLIB_LIBXCURSOR if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXEXT if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXI if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXINERAMA if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXRANDR if LINGMO_PACKAGE_XORG7
	help
	  GLFW is an Open Source, multi-platform library for creating
	  windows with OpenGL contexts and receiving input and events.

	  http://www.glfw.org

comment "libglfw depends on X.org or Wayland and an OpenGL or GLES backend"
	depends on !(LINGMO_PACKAGE_XORG7 || LINGMO_PACKAGE_WAYLAND)
	depends on !(LINGMO_PACKAGE_HAS_LIBGL || LINGMO_PACKAGE_HAS_LIBGLES)
