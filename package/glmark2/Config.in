config LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY
	bool

config LINGMO_PACKAGE_GLMARK2_FLAVOR_DRM_GLESV2
	bool
	default y
	depends on LINGMO_PACKAGE_HAS_LIBEGL
	depends on LINGMO_PACKAGE_HAS_LIBGBM
	depends on LINGMO_PACKAGE_HAS_LIBGLES
	depends on LINGMO_PACKAGE_HAS_UDEV
	depends on LINGMO_TOOLCHAIN_HAS_THREADS  # libpthread-stubs -> libdrm
	select LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

config LINGMO_PACKAGE_GLMARK2_FLAVOR_DRM_GL
	bool
	default y
	depends on LINGMO_PACKAGE_HAS_LIBEGL
	depends on LINGMO_PACKAGE_HAS_LIBGL
	depends on LINGMO_PACKAGE_HAS_UDEV
	select LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

config LINGMO_PACKAGE_GLMARK2_FLAVOR_WAYLAND_GLESV2
	bool
	default y
	depends on LINGMO_PACKAGE_HAS_LIBEGL
	depends on LINGMO_PACKAGE_HAS_LIBGLES
	depends on LINGMO_PACKAGE_WAYLAND
	select LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

config LINGMO_PACKAGE_GLMARK2_FLAVOR_WAYLAND_GL
	bool
	default y
	depends on LINGMO_PACKAGE_HAS_LIBEGL
	depends on LINGMO_PACKAGE_HAS_LIBGL
	depends on LINGMO_PACKAGE_WAYLAND
	select LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

config LINGMO_PACKAGE_GLMARK2_FLAVOR_X11_GLESV2
	bool
	default y
	depends on LINGMO_PACKAGE_HAS_LIBEGL
	depends on LINGMO_PACKAGE_HAS_LIBGLES
	depends on LINGMO_PACKAGE_XLIB_LIBX11
	select LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

config LINGMO_PACKAGE_GLMARK2_FLAVOR_X11_GL
	bool
	default y
	depends on LINGMO_PACKAGE_HAS_LIBGL
	depends on LINGMO_PACKAGE_XLIB_LIBX11
	select LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

comment "glmark2 needs a toolchain w/ C++, gcc >= 4.9"
	depends on !LINGMO_INSTALL_LIBSTDCPP || !LINGMO_TOOLCHAIN_GCC_AT_LEAST_4_9

comment "glmark2 needs an OpenGL or an openGL ES and EGL backend"
	depends on LINGMO_TOOLCHAIN_GCC_AT_LEAST_4_9 && LINGMO_INSTALL_LIBSTDCPP
	depends on !LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY

config LINGMO_PACKAGE_GLMARK2
	bool "glmark2"
	depends on LINGMO_INSTALL_LIBSTDCPP
	depends on LINGMO_TOOLCHAIN_GCC_AT_LEAST_4_9 # C++14
	depends on LINGMO_PACKAGE_GLMARK2_FLAVOR_ANY
	select LINGMO_PACKAGE_JPEG
	select LINGMO_PACKAGE_LIBDRM if LINGMO_PACKAGE_GLMARK2_FLAVOR_DRM_GLESV2
	select LINGMO_PACKAGE_LIBPNG
	select LINGMO_PACKAGE_WAYLAND_PROTOCOLS if LINGMO_PACKAGE_GLMARK2_FLAVOR_WAYLAND_GL
	select LINGMO_PACKAGE_WAYLAND_PROTOCOLS if LINGMO_PACKAGE_GLMARK2_FLAVOR_WAYLAND_GLESV2
	help
	  glmark2 is an OpenGL 2.0 and ES 2.0 benchmark.

	  https://github.com/glmark2/glmark2
