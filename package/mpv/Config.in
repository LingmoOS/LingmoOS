config LINGMO_PACKAGE_MPV_SUPPORTS_VAAPI
	bool
	default y if LINGMO_PACKAGE_LIBDRM && LINGMO_PACKAGE_MESA3D_OPENGL_EGL
	default y if LINGMO_PACKAGE_WAYLAND
	default y if LINGMO_PACKAGE_XORG7

config LINGMO_PACKAGE_MPV
	bool "mpv"
	depends on LINGMO_INSTALL_LIBSTDCPP # libass
	depends on LINGMO_TOOLCHAIN_HAS_SYNC_4 # libass
	depends on LINGMO_TOOLCHAIN_HAS_THREADS_NPTL
	depends on LINGMO_PACKAGE_FFMPEG_ARCH_SUPPORTS
	depends on LINGMO_TOOLCHAIN_GCC_AT_LEAST_4_9 # C11/stdatomic.h
	depends on LINGMO_TOOLCHAIN_HAS_ATOMIC
	select LINGMO_PACKAGE_ALSA_LIB_MIXER if LINGMO_PACKAGE_ALSA_LIB
	select LINGMO_PACKAGE_ALSA_LIB_PCM if LINGMO_PACKAGE_ALSA_LIB
	select LINGMO_PACKAGE_LIBICONV if !LINGMO_ENABLE_LOCALE
	select LINGMO_PACKAGE_FFMPEG
	select LINGMO_PACKAGE_FFMPEG_SWSCALE
	select LINGMO_PACKAGE_LIBASS
	select LINGMO_PACKAGE_ZLIB
	select LINGMO_PACKAGE_WAYLAND_PROTOCOLS if LINGMO_PACKAGE_WAYLAND
	# Select xkbcommon for wayland to avoid being mysterious
	select LINGMO_PACKAGE_LIBXKBCOMMON if LINGMO_PACKAGE_WAYLAND
	# Select all necessary X11 dependencies if X.org is enabled
	select LINGMO_PACKAGE_XLIB_LIBX11 if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXEXT if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXINERAMA if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXPRESENT if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXSCRNSAVER if LINGMO_PACKAGE_XORG7
	select LINGMO_PACKAGE_XLIB_LIBXRANDR if LINGMO_PACKAGE_XORG7
	help
	  mpv is a fork of mplayer2 and MPlayer. It shares some features
	  with the former projects while introducing many more.

	  https://mpv.io/

comment "mpv needs a toolchain w/ C++, NPTL, gcc >= 4.9"
	depends on LINGMO_PACKAGE_FFMPEG_ARCH_SUPPORTS
	depends on LINGMO_TOOLCHAIN_HAS_ATOMIC
	depends on LINGMO_TOOLCHAIN_HAS_SYNC_4
	depends on !LINGMO_TOOLCHAIN_HAS_THREADS_NPTL || \
		!LINGMO_INSTALL_LIBSTDCPP || \
		!LINGMO_TOOLCHAIN_GCC_AT_LEAST_4_9
