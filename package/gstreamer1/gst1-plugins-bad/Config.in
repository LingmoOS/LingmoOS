	select LINGMO_PACKAGE_WEBP
	help
	  Webp image format plugin

config LINGMO_PACKAGE_GST1_PLUGINS_BAD_PLUGIN_WEBRTC
	bool "webrtc"
	depends on !LINGMO_STATIC_LIBS # libnice -> gnutls
	select LINGMO_PACKAGE_GST1_PLUGINS_BASE # libgstsdp
	select LINGMO_PACKAGE_LIBNICE
	help
	  WebRTC plugins (webrtcbin - a bin for webrtc connections)

comment "webrtc needs a toolchain w/ dynamic library"
	depends on LINGMO_STATIC_LIBS

config LINGMO_PACKAGE_GST1_PLUGINS_BAD_PLUGIN_WEBRTCDSP
	bool "webrtcdsp"
	# All depends from webrtc-audio-processing
	depends on LINGMO_PACKAGE_WEBRTC_AUDIO_PROCESSING_ARCH_SUPPORTS
	depends on LINGMO_PACKAGE_LIBABSEIL_CPP_ARCH_SUPPORTS
	depends on LINGMO_INSTALL_LIBSTDCPP
	depends on LINGMO_TOOLCHAIN_GCC_AT_LEAST_8
	depends on LINGMO_TOOLCHAIN_HAS_THREADS_NPTL
	depends on !LINGMO_STATIC_LIBS
	select LINGMO_PACKAGE_WEBRTC_AUDIO_PROCESSING
	help
	  WebRTC echo-cancellation, gain control and noise suppression

comment "webrtcdsp needs a toolchain w/ C++, NPTL, dynamic library, gcc >= 8"
	depends on LINGMO_PACKAGE_WEBRTC_AUDIO_PROCESSING_ARCH_SUPPORTS
	depends on LINGMO_PACKAGE_LIBABSEIL_CPP_ARCH_SUPPORTS
	depends on !LINGMO_INSTALL_LIBSTDCPP || !LINGMO_TOOLCHAIN_HAS_THREADS_NPTL \
		|| LINGMO_STATIC_LIBS || !LINGMO_TOOLCHAIN_GCC_AT_LEAST_8

config LINGMO_PACKAGE_GST1_PLUGINS_BAD_PLUGIN_WPE
	bool "wpe"
	default y
	depends on LINGMO_PACKAGE_WPEWEBKIT
	depends on LINGMO_PACKAGE_GST1_PLUGINS_BASE_HAS_LIB_OPENGL
	depends on !LINGMO_PACKAGE_WPEWEBKIT_MEDIA_STREAM

comment "wpe needs the gst1-plugins-base opengl library and wpewebkit"
	depends on !LINGMO_PACKAGE_WPEWEBKIT \
		|| !LINGMO_PACKAGE_GST1_PLUGINS_BASE_HAS_LIB_OPENGL

comment "wpe is incompatible w/ wpewebkit media-stream support"
	depends on LINGMO_PACKAGE_WPEWEBKIT
	depends on LINGMO_PACKAGE_GST1_PLUGINS_BASE_HAS_LIB_OPENGL
	depends on LINGMO_PACKAGE_WPEWEBKIT_MEDIA_STREAM

