	depends on LINGMO_PACKAGE_FLUTTER_ENGINE_ARCH_SUPPORTS
	depends on !LINGMO_TOOLCHAIN_USES_GLIBC \
		|| !LINGMO_INSTALL_LIBSTDCPP || !LINGMO_TOOLCHAIN_GCC_AT_LEAST_8 \
		|| LINGMO_STATIC_LIBS || !LINGMO_USE_WCHAR \
		|| !LINGMO_HOST_GCC_AT_LEAST_5

comment "ivi-homescreen needs a toolchain not affected by GCC bug 64735"
	depends on LINGMO_PACKAGE_HOST_FLUTTER_SDK_BIN_ARCH_SUPPORTS
	depends on LINGMO_PACKAGE_FLUTTER_ENGINE_ARCH_SUPPORTS
	depends on LINGMO_TOOLCHAIN_HAS_GCC_BUG_64735

