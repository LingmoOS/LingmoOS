comment "Logging"
config LINGMO_PACKAGE_IVI_HOMESCREEN_DART_VM_LOGGING
	bool "Enable Dart VM Logging"

config LINGMO_PACKAGE_IVI_HOMESCREEN_DLT_LOGGING
