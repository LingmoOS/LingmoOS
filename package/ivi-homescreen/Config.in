	  Based on audioplayers-v5.2.1

	  https://pub.dev/packages/audioplayers

config LINGMO_PACKAGE_IVI_HOMESCREEN_FLUTTER_SECURE_STORAGE_PLUGIN
	bool "Flutter Secure Storage"
	select LINGMO_PACKAGE_LIBSECRET
	help
