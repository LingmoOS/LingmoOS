config LINGMO_PACKAGE_SUPERTUX
	bool "supertux"
	depends on LINGMO_INSTALL_LIBSTDCPP
	depends on LINGMO_PACKAGE_HAS_LIBGL # libglew
	depends on LINGMO_PACKAGE_OPENAL_ARCH_SUPPORTS
	depends on LINGMO_PACKAGE_XORG7 # libglew, SDL2 OpenGL (GLX)
	depends on LINGMO_TOOLCHAIN_GCC_AT_LEAST_6 # C++14
	depends on LINGMO_TOOLCHAIN_HAS_THREADS_NPTL # openal
	depends on LINGMO_TOOLCHAIN_SUPPORTS_ALWAYS_LOCKFREE_ATOMIC_INTS # boost-filesystem
	depends on LINGMO_USE_MMU # SDL2 OpenGL (GLX)
	depends on !LINGMO_STATIC_LIBS # SDL2
	depends on LINGMO_USE_WCHAR # Boost
	select LINGMO_PACKAGE_BOOST
	select LINGMO_PACKAGE_BOOST_DATE_TIME
	select LINGMO_PACKAGE_BOOST_FILESYSTEM
	select LINGMO_PACKAGE_BOOST_LOCALE
	select LINGMO_PACKAGE_BOOST_SYSTEM
	select LINGMO_PACKAGE_FREETYPE
	select LINGMO_PACKAGE_GLM
	select LINGMO_PACKAGE_LIBCURL
	select LINGMO_PACKAGE_LIBGLEW
	select LINGMO_PACKAGE_LIBOGG
	select LINGMO_PACKAGE_LIBPNG
	select LINGMO_PACKAGE_LIBVORBIS
	select LINGMO_PACKAGE_OPENAL
	select LINGMO_PACKAGE_PHYSFS
	select LINGMO_PACKAGE_SDL2
	select LINGMO_PACKAGE_SDL2_IMAGE
	select LINGMO_PACKAGE_SDL2_OPENGL
	select LINGMO_PACKAGE_ZLIB
	help
	  SuperTux is a free classic 2D jump'n run sidescroller game in
	  a style similar to the original Super Mario games covered
	  under the GNU GPL.

	  http://supertux.github.io/

comment "supertux needs OpenGL and a toolchain w/ C++, gcc >= 6, NPTL, dynamic library, wchar"
	depends on LINGMO_PACKAGE_OPENAL_ARCH_SUPPORTS
	depends on LINGMO_PACKAGE_XORG7
	depends on LINGMO_USE_MMU
	depends on LINGMO_TOOLCHAIN_SUPPORTS_ALWAYS_LOCKFREE_ATOMIC_INTS
	depends on !LINGMO_INSTALL_LIBSTDCPP || !LINGMO_PACKAGE_HAS_LIBGL || \
		!LINGMO_TOOLCHAIN_GCC_AT_LEAST_6 || !LINGMO_TOOLCHAIN_HAS_THREADS_NPTL || \
		LINGMO_STATIC_LIBS || !LINGMO_USE_WCHAR
