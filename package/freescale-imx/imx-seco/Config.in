config LINGMO_PACKAGE_IMX_SECO
	bool "imx-seco"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8 || \
		LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8X || \
		LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8DXL
	help
	  Firmware file for the i.MX8 and i.MX8X Security Controller.

	  This library is provided by Freescale as-is and doesn't have
	  an upstream.

if LINGMO_PACKAGE_IMX_SECO

choice
	prompt "i.MX Seco Firmware Release"
	default LINGMO_PACKAGE_IMX_SECO_MX8QMB0 if LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8
	default LINGMO_PACKAGE_IMX_SECO_MX8QXC0 if LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8X
	default LINGMO_PACKAGE_IMX_SECO_MX8DXLB0 if LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8DXL
	help
	  Select the appropriate ahab container image to install
	  to match the iMX asics revision.

	  Note - mismatches result in a failure to boot

config LINGMO_PACKAGE_IMX_SECO_MX8DXLA0
	bool "imx-seco-mx8dxla0"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8X

config LINGMO_PACKAGE_IMX_SECO_MX8DXLA1
	bool "imx-seco-mx8dxla1"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8X

config LINGMO_PACKAGE_IMX_SECO_MX8DXLB0
	bool "imx-seco-mx8dxlb0"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8DXL

config LINGMO_PACKAGE_IMX_SECO_MX8QMB0
	bool "imx-seco-mx8qmb0"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8

config LINGMO_PACKAGE_IMX_SECO_MX8QXB0
	bool "imx-seco-mx8qxb0"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8X

config LINGMO_PACKAGE_IMX_SECO_MX8QXC0
	bool "imx-seco-mx8qxc0"
	depends on LINGMO_PACKAGE_FREESCALE_IMX_PLATFORM_IMX8X

endchoice

config LINGMO_PACKAGE_IMX_SECO_AHAB_CONTAINER_IMAGE
	string
	default "mx8dxla0-ahab-container.img" if LINGMO_PACKAGE_IMX_SECO_MX8DXLA0
	default "mx8dxla1-ahab-container.img" if LINGMO_PACKAGE_IMX_SECO_MX8DXLA1
	default "mx8dxlb0-ahab-container.img" if LINGMO_PACKAGE_IMX_SECO_MX8DXLB0
	default "mx8qmb0-ahab-container.img" if LINGMO_PACKAGE_IMX_SECO_MX8QMB0
	default "mx8qxb0-ahab-container.img" if LINGMO_PACKAGE_IMX_SECO_MX8QXB0
	default "mx8qxc0-ahab-container.img" if LINGMO_PACKAGE_IMX_SECO_MX8QXC0

endif
